{
    "python.testing.pytestArgs": [
        "-s"
    ],
    "editor.rulers": [
        135
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.lintOnSave": true,
    "python.linting.pylintArgs": [
        "--rcfile=setup.cfg",
        "--max-line-length=135",
        "--max-attributes=15",
        "--disable=invalid-name,fixme,import-outside-toplevel,too-many-lines,wrong-import-order,wrong-import-position,import-error,too-many-public-methods,too-many-function-args,logging-fstring-interpolation"
    ],
    "configurations": [
        {
          "name": "udrl",
          "type": "python",
          "request": "launch",
          "module": "src.udrl",
          "justMyCode": false,
          "console": "internalConsole"
        },
        {
            "name": "Python: Current File (Integrated Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
          },
          {
            "name": "Python: Current File (External Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "externalTerminal"
          }
      ]
}